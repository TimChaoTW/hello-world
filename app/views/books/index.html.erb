<p id="notice"><%= notice %></p>
<h1>Books</h1>
<div class="index-new">
  <%= button_to 'New Book', new_book_path, method: :get, class: "button index-new", form: {class: "inline"} %>
</div>

<table class="index-contain">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Publish date</th>
      <th class="index-content">Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td>
  <%= link_to book,class:"index-pic" do %>
    <% if book.book_cover.attached? %>
      <%= image_tag(book.book_image(55)) %>
    <% else %>
      <i class="fa-solid fa-book fa-4x"></i>
    <% end %>
  <% end %>
</td>
      <td class="index-fontsize"><%= link_to book.title, book, class:"link" %></td>
      <td class="index-fontsize"><%= book.publish_date %></td>
      <td class="index-fontsize"><%= book.content %></td>
    <% end %>
  </tbody>
</table>